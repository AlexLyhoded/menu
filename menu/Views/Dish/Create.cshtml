@using menu.Model
@model Dish

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<h1 class="text-center my-4">Додати нову страву</h1>

<form asp-controller="Dish" asp-action="Create" method="post" enctype="multipart/form-data">
    @if (Model.Id != Guid.Empty)
    {
        <input type="hidden" name="id" value="@Model.Id" />
    }
    <div class="form-group mb-3">
        <label for="Title" class="form-label">Назва страви</label>
        <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" required />
    </div>

    <div class="form-group mb-3">
        <label for="Description" class="form-label">Опис</label>
        <textarea id="Description" name="Description" class="form-control" required>@Model.Description</textarea>
    </div>

    <div class="form-group mb-3">
        <label for="Price" class="form-label">Ціна</label>
        <input type="number" id="Price" name="Price" class="form-control" value="@Model.Price" required />
    </div>

    <div class="form-group mb-3">
        <label for="Weight" class="form-label">Вага (г)</label>
        <input type="number" id="Weight" name="Weight" class="form-control" value="@Model.Weight" required />
    </div>

    <div class="form-group mb-3">
        <label for="IsAvailable" class="form-label">Доступність</label>
        <select id="IsAvailable" name="IsAvailable" class="form-select" required>
            <option value="true" >Доступно</option>
            <option value="false">Недоступно</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="File" class="form-label">Зображення страви</label>
        <input type="file" id="File" name="File" accept="image/*" class="form-control" />
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-success btn-lg">Додати страву</button>
    </div>
</form>